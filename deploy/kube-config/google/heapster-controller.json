{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
	"labels": {
	    "k8s-app" : "heapster",
	    "name": "heapster",
	    "version": "v6"
	},
	"name": "heapster",
	"namespace": "kube-system"
    },
    "spec": {
	"replicas": 1,
	"selector": {
	    "k8s-app": "heapster",
	    "version": "v6"
	},
	"template": {
	    "metadata": {
		"labels": {
		    "k8s-app": "heapster",
		    "version": "v6"
		}
	    },
	    "spec": {
		"volumes": [
		    {
			"name": "ssl-certs",
			"hostPath": {
			    "path": "/etc/ssl/certs"
			}
		    }
		],
		"containers": [
		    {
			"image": "kubernetes/heapster:v0.17.0",
			"name": "heapster",
			"command": [
			    "/heapster",
			    "--source=kubernetes",
			    "--sink=gcm",
			    "--sink=gcl",
			    "--poll_duration=2m",
			    "--stats_resolution=1m"
			],
			"volumeMounts": [
			    {
				"name": "ssl-certs",
				"readOnly": true,
				"mountPath": "/etc/ssl/certs"
			    }
			]
		    }
		]
	    }
	}
    }
}
